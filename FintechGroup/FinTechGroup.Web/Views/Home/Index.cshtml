@using FinTechGroup.Domain;

@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Companies List</h2>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Ticker
                </th>
                <th>
                    7DAvg
                </th>
                <th>
                    30DAvg
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="25%">
                        @obj.CompanyName
                    </td>
                    <td width="25%">
                        @obj.Ticker
                    </td>
                    <td width="25%">
                        @obj.SevenDaysAvg
                    </td>
                    <td width="25%">
                        @obj.ThirtyDaysAvg
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

